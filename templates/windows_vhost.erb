<% @vhost.each do |server, port_config| %>
<% port_config.each do |port, config| %>
<VirtualHost *:<%= port %>>
 DocumentRoot "<%= port_config[config]['DocumentRoot'] %>"
 ServerName <%= server %>
 <% config['Directory'].each do |dir, dir_config| %>
 <Directory "<%= dir %>">
 </Directory>
 <% end %>
</VirtualHost>
<% end %>
<% end %>

