<% @vhost.each do |server, port_config| %>
<% port_config.each do |port, config| %>
<VirtualHost *:<%= port %>>
 DocumentRoot "<%= config['DocumentRoot'] %>"
 ServerName <%= server %>
 <% config['Directory'].each do |dir, dir_config| %>
 <Directory "<%= dir %>">
 <% dir_config.each do |key, value| -%>
 <%= key %> <%= value %>
 <% end -%>
 </Directory>
 <%- end -%>
</VirtualHost>
<% end %>
<% end %>

